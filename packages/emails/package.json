    "form-data": "^4.0.1",
    "javascript-time-ago": "^2.5.11",
    "mailgun.js": "^10.2.3",
    "node-html-markdown": "^1.3.0",
    "object.groupby": "^1.0.3",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/object.groupby": "^1.0.4",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "typescript": "^5.0.0"
  },
  "exports": {
