{
  "name": "@sill/api",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "tsx watch ./src/index.ts",
    "dev:local": "tsx watch --tsconfig ./tsconfig.json --env-file ../../.env ./src/index.ts",
    "build": "tsc",
    "start": "node ./dist/index.js",
    "lint": "biome check",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@atcute/identity-resolver": "^1.1.3",
    "@atcute/identity-resolver-node": "^1.0.2",
    "@atproto/api": "^0.13.5",
    "@atproto/identity": "^0.4.1",
    "@atproto/jwk-jose": "^0.1.2",
    "@atproto/oauth-client-node": "^0.1.4",
    "@aws-sdk/client-s3": "^3.844.0",
    "@epic-web/totp": "^1.1.2",
    "@hono/node-server": "^1.13.5",
    "@hono/zod-validator": "^0.4.1",
    "@polar-sh/sdk": "^0.34.2",
    "@sill/auth": "workspace:*",
    "@sill/emails": "workspace:*",
    "@sill/links": "workspace:*",
    "@sill/schema": "workspace:*",
    "bcryptjs": "^2.4.3",
    "cookie": "^0.7.2",
    "drizzle-orm": "^0.44.4",
    "hono": "^4.6.14",
    "jsonwebtoken": "^9.0.2",
    "masto": "^6.8.0",
    "pg": "^8.13.1",
    "turbo-stream": "^3.1.0",
    "uuidv7-js": "^1.1.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie": "^0.6.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/pg": "^8.11.10",
    "drizzle-kit": "^0.26.2",
    "tsx": "^4.19.2",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}